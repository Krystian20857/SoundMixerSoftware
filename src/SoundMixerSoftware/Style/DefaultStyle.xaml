<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DefaultTabItem" TargetType="{x:Type TabItem}">
        <Setter Property="Padding" Value="15"/>
    </Style>
    <Style x:Key="DefaultBorder" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="DarkGray"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <Style x:Key="BottomButton" TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Margin" Value="5, 0"/>
        <Setter Property="Width" Value="100"/>
    </Style>
    <Style x:Key="BottomButtonBig" TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Margin" Value="10, 0"/>
        <Setter Property="Width" Value="150"/>
    </Style>
    <Style x:Key="SettingBorder" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="0, 5"/>
        <Setter Property="BorderBrush" Value="DarkGray"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
</ResourceDictionary>